<header class="navbar navbar-fixed-top navbar-inverse">
  <div class="navbar-inner">
    <div class="container">
      <%= image_tag "logo.png", alt: "Keystone", id: "logo" %>
      <nav >
        <ul class="nav pull-right navbar-nav navbar-right">
          <li><%= link_to "Home",    root_path %></li>
          <li><%= link_to "Help",    help_path %></li>
          <% if signed_in? %>
            <li class="dropdown">
              <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-expanded="false">Account <span class="caret"></span></a>
              <ul class="dropdown-menu" role="menu">
                <li><%= link_to "Users", users_path if admin? %></li>
                <li><%= link_to "Categories", categories_path if admin? %></li>
                <li><%= link_to "Products", products_path if admin? %></li>
                <li><%= link_to "Settings",edit_user_path(current_user) %></li>
                <li><%= link_to "Log out", logout_path, method: "delete" %></li>
              </ul>
            </li>
          <% else %>
            <li><%= link_to "Sign in", signin_path %></li>
            <li><%= link_to "Sign up", sign_up_path %></li>
          <% end %>
        </ul>
      </nav>
    </div>
  </div>
</header>