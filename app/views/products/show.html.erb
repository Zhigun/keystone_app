<div class="block">
  <p id="notice"><%= notice %></p>
  <p>
    <%= image_tag @product.img(:medium) %>
    <%= link_to 'Edit', edit_product_path(@product), class: 'btn btn-primary ' if admin? %>
    <%= link_to 'Delete', @product, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-primary ' if admin? %>
    <%= link_to 'Back', products_path, class: 'btn btn-primary ' %><br><br>
    <h2><%= @product.title %></h2><br>
    <%= @product.description %>
  </p>
</div>
<%= render 'reviews/form' if signed_in? %>

<%= render @reviews %>
<%= will_paginate @reviews, renderer: BootstrapPagination::Rails %>