<%= form_for(@user) do |f| %>
  <%= render 'shared/error_messages' %>

  <% if !current_user.nil? && current_user.is_admin %>
    <div class="field">
      <br><%= f.label :is_admin %>
      <%= f.check_box :is_admin %><br><br>
    </div>
  <% end %>
  <div class="field">
    <%= f.label :name %><br>
    <%= f.text_field :name %>
  </div>
  <div class="field">
    <%= f.label :email %><br>
    <%= f.text_field :email %>
  </div>
  <div class="field">
    <%= f.label :password %><br>
    <%= f.password_field :password %>
  </div>
  <div class="field">
    <%= f.label :password_confirmation, "Confirmation" %><br>
    <%= f.password_field :password_confirmation %>
  </div>
  <div class="actions">
    <%= f.submit class:"btn btn-primary btn-lg" %>
  </div>
<% end %>
