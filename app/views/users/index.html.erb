  <% @users.each do |user| %>
    <div style="border-bottom: 1px solid #555">
      <p>Name: <%= user.name %><br>
        email: <%= user.email %></p>
      <% if admin? %>
        <%= link_to 'Show', user %>
        <%= link_to 'Edit', edit_user_path(user) if current_user == user %>
        <%= link_to 'Destroy', user, method: :delete, data: { confirm: 'Are you sure?' } if user != current_user %>
      <% end %>
    </div>
  <% end %>
<br>

